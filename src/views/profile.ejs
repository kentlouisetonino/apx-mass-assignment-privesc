<%- include("partials/header") %>
<body class="h-screen flex flex-col items-center justify-center space-y-4">
    <header>
        <h1 class="text-2xl font-bold">
            <span>Welcome <%= user.username %> </span>
            <a href="/logout" class="btn btn-neutral btn-sm">Log Out</a>
        </h1>
    </header>

    <main class="container mx-auto">
        <form method="POST" class="flex flex-col items-center justify-center space-y-2">
            <input type="text" name="name" placeholder="Name" value="<%= user.name %>" class="input input-bordered w-full max-w-xs"/>
            <input type="number" name="age" placeholder="Age" value="<%= user.age %>" class="input input-bordered w-full max-w-xs"/>
            <input type="submit" value="Update" class="btn btn-primary w-full max-w-xs" />
        </form>
    </main>

    <footer>
        <% if (alert.success) { %>
            <div class="alert alert-success"><%= alert.success %></div>
        <% } %>
    </footer>
    <script src="https://cdn.tailwindcss.com"></script>
</body>
<%- include("partials/footer") %>